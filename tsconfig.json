{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "skipLibCheck": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./"
  },
  "exclude": [
    "node_modules",
    "dist",
    "*.sol", "**/*.sol",
    "*.json", "**/*.json"
  ],
  "include": ["*.ts", "**/*.ts"]
}
